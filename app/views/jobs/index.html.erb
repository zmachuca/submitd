<div class="container">
    <p id="notice"><%= notice %></p>
    <h1>Current Openings:</h1>
  <div class="jumbotron">
    <table>
      <thead>
        <tr>
          <th><h2>Company</h2></th>
          <th><h2>Title</h2></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <div class="container">
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td><h3 class="company"><%= link_to job.company, job %></h3></td>
            <td><%= link_to job.title, job %></td>
            <td><%= link_to 'Show', job %></td>
            <% if job.user == current_user %>
              <td><%= link_to 'Edit', edit_job_path(job) %></td>
              <td><%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? %>
      <%= link_to 'New Job', new_job_path %>
    <% end %>
  </div> <%# Jumbotron %> 
</div> <%# Container %> 